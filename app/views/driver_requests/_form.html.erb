<h2>Driver Details</h2>

<%= form_with model: @driver_request do |f| %>
<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

<div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
    <%= f.label :driving_license %><br />
    <%= f.file_field :driving_license, autofocus: true, autocomplete: "driving_license" %>
</div>

<div class="field">
    <%= f.label :registration_certificate %><br />
    <%= f.file_field :registration_certificate, autofocus: true, autocomplete: "registration_certificate" %>
</div>

<div class="field">
    <%= f.label :insurence_of_driver %><br />
    <%= f.file_field :insurence_of_driver, autofocus: true, autocomplete: "insurence_of_driver" %>
</div>


  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

<% end %>